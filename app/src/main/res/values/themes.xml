<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SerializerFail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_base</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary_highest_emphasis</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_base</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_highest_emphasis</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="username">
        <item name="android:textSize">13sp</item>
<!--        <item name="android:letterSpacing">0.03</item>-->
        <item name="android:textColor">@color/secondary_light</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
    </style>

    <style name="username_player">
        <item name="android:textSize">13sp</item>
<!--        <item name="android:letterSpacing">0.03</item>-->
        <item name="android:textColor">@color/player_secondary_light</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
    </style>

    <style name="one_line_player">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
<!--        <item name="android:letterSpacing">0.03</item>-->
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
        <item name="android:textColor">@color/player_on_surface_highest_emphasis</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetDialog</item>
    </style>
    <style name="CustomBottomSheetDialogThemeWithMargin" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetDialog</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Theme.NoWiredStrapInNavigationBar" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>

    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="display_text_40">
        <item name="android:textSize">40sp</item>
<!--        <item name="android:letterSpacing">-0.03</item>-->
        <item name="android:lineHeight" tools:targetApi="p">48dp</item>
        <item name="android:fontFamily">@font/inter_extra_bold</item>
    </style>

    <style name="display_text_36">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight" tools:targetApi="p">36dp</item>
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="display_text_26">
        <item name="android:textSize">26sp</item>
        <item name="android:lineHeight" tools:targetApi="p">32dp</item>
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="heading_24">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
<!--        <item name="android:letterSpacing">0.01</item>-->
    </style>

    <style name="heading_20">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24dp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="profile_full_name">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/player_on_surface_high_emphasis</item>
    </style>

    <style name="profile_username">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/player_on_surface_medium_emphasis</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="body_1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="body_2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="caption">
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="footnote">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
        <item name="android:letterSpacing">0.025</item>
    </style>
    <style name="follow_button" parent="footnote">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20px</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="overline">
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="button">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:letterSpacing">0.0175</item>
    </style>]

    <style name="Theme.App.Slash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/surface</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="button_label">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/on_surface_highest_emphasis</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
    </style>
    <style name="button_label_player">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/player_on_surface_highest_emphasis</item>
        <item name="android:fontFamily">@font/inter_weight_500</item>
    </style>
    <style name="communityStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#343437</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="room_title">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter_bold</item>

    </style>

    <style name="by">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#706C73</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="room_description">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/on_surface_medium_emphasis</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="the_clash_t">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter_regular</item>

    </style>
</resources>
